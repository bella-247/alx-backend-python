#!/bin/bash

# Deploy blue version
echo "Applying blue deployment..."
kubectl apply -f blue_deployment.yaml

# Deploy green version
echo "Applying green deployment..."
kubectl apply -f green_deployment.yaml

# Apply main service pointing to blue initially
echo "Applying main service..."
kubectl apply -f kubeservice.yaml

# Wait a few seconds for pods to be ready
sleep 10

# Check logs of green deployment to ensure no errors
GREEN_POD=$(kubectl get pods -l app=messaging-app,version=green -o jsonpath='{.items[0].metadata.name}')
echo "Logs of green pod ($GREEN_POD):"
kubectl logs $GREEN_POD
